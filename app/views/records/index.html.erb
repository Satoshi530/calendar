<div class="main-visual">
  <div class="main-visual-text">
    <h2>学習記録</h2>
  </div>
</div>
<main>
  <%= month_calendar events: @records do |date, records| %>
    <%= date.day %>


    <% records.each do |record| %>
      <div>
        <%= link_to record_path(record.id) do %>
          <%= record.title %>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <div class="add_record">
    <%= link_to "学習内容を記録する", new_record_path %>
  </div>
</main>